{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "node16"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
